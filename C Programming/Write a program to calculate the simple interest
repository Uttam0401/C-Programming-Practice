//Write a program to calculate the simple interest.
#include<stdio.h>
#include<conio.h>
    int main()
    {
        int P,R,T,SI;
        printf("Enter The Principle value:-");
        scanf("%d",&P);
        printf("Enter The Rate:-");
        scanf("%d",&R);
        printf("Enter The Time:-");
        scanf("%d",&T);
        SI = P*R*T/100;
        printf("Simple Interest=%d",SI);
        return 0;
    }